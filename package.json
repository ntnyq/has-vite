{
  "name": "has-vite",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@9.6.0",
  "description": "Check if a project is using vite",
  "keywords": [
    "has-vite",
    "vite",
    "check"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/has-vite#readme",
  "bugs": {
    "url": "https://github.com/ntnyq/has-vite/issues"
  },
  "repository": "ntnyq/has-vite",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "coverage": "vitest --coverage",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "vitest --typecheck"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^2.7.0",
    "@ntnyq/prettier-config": "^1.21.2",
    "@types/node": "^20.14.12",
    "@vitest/coverage-v8": "^2.0.4",
    "bumpp": "^9.4.1",
    "eslint": "^9.7.0",
    "husky": "^9.1.1",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.2",
    "pnpm": "^9.6.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "unbuild": "^3.0.0-rc.7",
    "vitest": "^2.0.4"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
