{
  "name": "has-vite",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@9.15.0",
  "description": "Check if a project is using vite",
  "keywords": [
    "check",
    "has-vite",
    "vite"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/has-vite#readme",
  "repository": "ntnyq/has-vite",
  "bugs": {
    "url": "https://github.com/ntnyq/has-vite/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "coverage": "vitest --coverage",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "vitest --typecheck"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.9.1",
    "@ntnyq/prettier-config": "^1.22.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.0.0-beta.2",
    "bumpp": "^9.9.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "pnpm": "^9.15.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.0-rc.11",
    "vitest": "^3.0.0-beta.2"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
